@model IEnumerable<Storm.Business.ViewModels.PlayerViewModel>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.PlayerName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PlayerMoney)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PlayerHeroes)
        </th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PlayerName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PlayerMoney)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PlayerHeroes.Count)
            </td>
            <td>
                @Html.ActionLink("Buy Hero", "BuyHeroes", new { idPlayer = item.PlayerId }) |
                @Html.ActionLink("Edit", "Edit", new { id = item.PlayerId }) |
                @Html.ActionLink("Details", "Details", new { id = item.PlayerId }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.PlayerId })
            </td>
        </tr>
    }

</table>
