@model IList<Storm.Business.ViewModels.HeroViewModel>

@if (Model.Count > 0)
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => Model[0].HeroName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => Model[0].HeroType)
                </th>
                <th>
                    @Html.DisplayNameFor(model => Model[0].HeroPrice)
                </th>
                <th>
                    @Html.DisplayNameFor(model => Model[0].HeroFreeToPlay)
                </th>
                <th>
                    @Html.DisplayNameFor(model => Model[0].HeroActive)
                </th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Count; i++)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(model => Model[i].HeroName)
                    </td>
                    <td>
                        @Html.DisplayFor(model => Model[0].HeroType)
                    </td>
                    <td>
                        @Html.DisplayFor(model => Model[0].HeroPrice)
                    </td>
                    <td>
                        @Html.DisplayFor(model => Model[0].HeroFreeToPlay)
                    </td>
                    <td>
                        @Html.DisplayFor(model => Model[0].HeroActive)
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
